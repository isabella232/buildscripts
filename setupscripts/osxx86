SCRIPTDIR=`dirname $0`

if [ -x /opt/local/bin/yasm ]; then
	export ASM_NASM=/opt/local/bin/yasm
elif [ -x /usr/local/bin/yasm ]; then
	export ASM_NASM=/usr/local/bin/yasm
else
	echo YASM not found!
	exit 1
fi

LDFLAGS=${LDFLAGS:--m32} \
$SCRIPTDIR/osxx8664 \
	-DCMAKE_C_FLAGS="-D_NONSTD_SOURCE -mmacosx-version-min=10.5 -m32 -Wall" \
	-DWITH_JAVA=0 \
	${1+"$@"}
